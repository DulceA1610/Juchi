<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frmregistro___karla"
    tools:context=".FrmRegistro">

    <Button
        android:id="@+id/btnatras"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#21B02C"
        android:text="ESTUDIANTE"
        android:textColor="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnregistrarse"
        app:layout_constraintEnd_toStartOf="@+id/btnregistrarse"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnregistrarse"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="340dp"
        android:backgroundTint="#21B02C"
        android:text="CHOFER"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnatras" />
</androidx.constraintlayout.widget.ConstraintLayout>