<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bievenida__1_"
    tools:context=".Bienvenida">

    <TextView
        android:id="@+id/textView"
        android:layout_width="91dp"
        android:layout_height="87dp"
        android:layout_marginTop="42dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="@+id/rg"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rg"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:background="?attr/actionModeCloseDrawable"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnContinuarB"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="77dp"
        android:backgroundTint="#21B02C"
        android:text="Continuar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="194dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnContinuarB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:context=".MainActivity" />

</androidx.constraintlayout.widget.ConstraintLayout>